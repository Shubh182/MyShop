@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

@foreach(var item in Model)
{
<div class="col-mid-4" style="height:250px;padding:10px;margin:10px;border:solid thin whitesmoke">
    <div class="col-mid-12">
        <img class="img" style="height:100px" src="~/Content/ProductImage/@item.Image" />
    </div>
    <div class="col-mid-12">
        <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
    </div>
    <div class="col-mid-12">
        <p>@item.Description</p>
    </div>
    <div class="col-mid-12">
        <p>@item.Price</p>
    </div>
    <div class="col-mid-12">
        <a href="#" class="btn btn-default">Add to Basket</a>
    </div>
</div>
}
<div class="col-mid-12 clearfix"/>